{
  "manifest_version": 3,
  "name": "SenText",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "100": "icons/sentext_icon.jpeg"
    }
  },
  "icons": {
    "100": "icons/sentext_icon.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["scripts/x_script.js"]
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["scripts/insta_script.js"]
    }
  ]
}
